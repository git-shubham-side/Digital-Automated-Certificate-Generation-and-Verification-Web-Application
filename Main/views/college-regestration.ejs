    <script>
      let currentStep = 1;

      function nextStep(step) {
        // Validate current step
        const currentForm = document.getElementById(`step${step}`);
        const inputs = currentForm.querySelectorAll(
          "input[required], textarea[required]",
        );
        let isValid = true;

        inputs.forEach((input) => {
          if (!input.checkValidity()) {
            input.reportValidity();
            isValid = false;
          }
        });

        if (!isValid) return;

        // Hide current step
        document.getElementById(`step${step}`).classList.add("hidden");

        // Show next step
        const nextStepNum = step + 1;
        document
          .getElementById(`step${nextStepNum}`)
          .classList.remove("hidden");

        // Update step indicators
        updateStepIndicators(nextStepNum);

        // If moving to step 4, populate review
        if (nextStepNum === 4) {
          populateReview();
        }

        currentStep = nextStepNum;
        window.scrollTo({ top: 0, behavior: "smooth" });
      }

      function prevStep(step) {
        // Hide current step
        document.getElementById(`step${step}`).classList.add("hidden");

        // Show previous step
        const prevStepNum = step - 1;
        document
          .getElementById(`step${prevStepNum}`)
          .classList.remove("hidden");

        // Update step indicators
        updateStepIndicators(prevStepNum);

        currentStep = prevStepNum;
        window.scrollTo({ top: 0, behavior: "smooth" });
      }

      function updateStepIndicators(activeStep) {
        const steps = document.querySelectorAll(".step");
        steps.forEach((step, index) => {
          const stepNum = index + 1;
          step.classList.remove("active", "completed");

          if (stepNum === activeStep) {
            step.classList.add("active");
          } else if (stepNum < activeStep) {
            step.classList.add("completed");
          }
        });
      }

      function populateReview() {
        const form = document.getElementById("registrationForm");
        const formData = new FormData(form);

        document.getElementById("review-collegeName").textContent =
          formData.get("collegeName") || "-";
        document.getElementById("review-collegeCode").textContent =
          formData.get("collegeCode") || "-";
        document.getElementById("review-collegeEmail").textContent =
          formData.get("collegeEmail") || "-";
        document.getElementById("review-collegePhone").textContent =
          formData.get("collegePhone") || "-";

        const adminName = `${formData.get("adminFirstName")} ${formData.get("adminLastName")}`;
        document.getElementById("review-adminName").textContent =
          adminName || "-";
        document.getElementById("review-designation").textContent =
          formData.get("designation") || "-";
        document.getElementById("review-adminEmail").textContent =
          formData.get("adminEmail") || "-";
        document.getElementById("review-adminPhone").textContent =
          formData.get("adminPhone") || "-";
      }

      // File upload preview
      document.querySelectorAll('input[type="file"]').forEach((input) => {
        input.addEventListener("change", function () {
          const label = this.parentElement.querySelector("label");
          if (this.files.length > 0) {
            const fileName = this.files[0].name;
            label.querySelector(".text-slate-400").innerHTML =
              `<span class="text-green-400 font-medium">✓ ${fileName}</span>`;
          }
        });
      });

      // Form submission
      document
        .getElementById("registrationForm")
        .addEventListener("submit", function (e) {
          e.preventDefault();

          // Check if terms are accepted
          if (!document.getElementById("termsAccept").checked) {
            alert("Please accept the Terms & Conditions");
            return;
          }

          // Show success message (in real app, this would submit to backend)
          alert(
            "Registration submitted successfully! You will receive a confirmation email within 24-48 hours.",
          );

          // Redirect to home or login page
